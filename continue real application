#include <stdio.h>

int main() {
   while(1)
   {
       printf("Enter name");
       char name[20];
       scanf("%s",name);
       printf("Enter father name");
       char fname[20];
       scanf("%s",fname);
       printf("enter branch");
       char branch[10];
       scanf("%s",branch);
       printf("enter marital status 1 for single and 2 for married");
       int a;
       scanf("%d",&a);
       if(a==1)
            continue;
       printf("Enter spouse name");
       char sname[20];
       scanf("%s",sname);
       printf("enter no of children");
       int b;
       scanf("%d",&b);
       printf("enter another record(y/n)");
       char ch;
       fflush(stdin);
       scanf("%c",&ch);
       if(ch=='n' || ch=='N')
             break;
       
   }
        return 0;
}
